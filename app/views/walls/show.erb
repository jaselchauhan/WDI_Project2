<div class="container-fluid">

<h2 class="page-header"><%= @wall.title %>  <% if !!(@wall.owner_id.present? && @wall.artist_id.present?) %>
    (painted)
  <% end %>
  </h2>


  <div class="row">
    <div class="col-md-6">

    <h3 id="aboutuser">about wall</h3>

    <% if @wall.image %>
    <img class="media-object" src="<%= @wall.image %>" alt="<%= @wall.title %>'s image">
    <% else %>
    <img class="media-object" src="/images/default.png" alt="<%= @wall.title %>'s image">
    <% end %>

    </div>
  </div>

    <div class="col-md-6">

      <p>location: <%= @wall.city %></p>

      <p><strong><a href="/users/<%= @wall.owner_id %>">find out more about the owner</a></strong></p>


      <% if !!(@wall.owner_id.present? && @wall.artist_id.present?) %>
        <p>painted by artist: <%= @wall.artist_id %></p>
      <% end %>

      <p>my artist and owner! (link profile pics to both here): <%= @wall.owner_id %></p>




    </div>

  </div>

  

  <br><br>
  

  <% if current_user.user_type == "wall_owner" %>
  <p><strong><a href="/walls/<%=@wall.id %>/edit">edit/update this wall</a></strong></p>

  <form action="/walls/<%= @wall.id %>/delete" method="post">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="delete">
  </form>

  <% else %>
  <p><strong><a href="mailto:<%=@user.email%>?Subject=i'd like to paint your wall" id="email_form">&lt; request to paint this wall &gt;</a></strong></p>
  <% end %>

</div>


