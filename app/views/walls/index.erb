<div class="container-fluid" id="gridwalls">

<h1 id="wallsindextitle" class="page-header">spare walls</h1>

<form id="search-form" class="form-inline" action="/walls">
  <input type="text" name="search" placeholder="Search" value="<%= params[:search] %>" class="form-control">
  <button class="btn btn-primary" id="search_button">Go</button>
  <a href="/walls" class="btn btn-primary" role="button" id="back_search_button"> Back to all walls </a>
</form><br><br>

<div class="row">
  <% @walls.each do |wall| %>

    <% if !(wall.owner_id.present? && wall.artist_id.present?) %>

    <div class="col-xs-12 col-md-4">
        <ul class="media-list">
          <li>
            <div>
              <a href="/walls/<%= wall.id %>">
              </a>
            </div>
            <div>
              <a href="/walls/<%= wall.id %>">
                <img class="wallsidx" src="<%= wall.image %>" width="100%">
              </a>
              <p><%= wall.city %><p>
            </div>
          </li>
          </ul>
        </div>
      <% end %>
  <% end %>
<!-- </ul> -->
</div>


<div class="container-fluid" id="mapwalls">

<% if is_artist? %>
<h1 class="page-header">map of sparewalls</h1>
<% else %>
<h1 class="page-header">map of completed walls</h1>
<% end %>


<input type="hidden" name="walls-data" value= '<%= @walls.to_json %>'>

  <div id="property-map"></div>

</div>


</div>




