<!DOCTYPE html>
<html lang="en">
<head>
  <%= css :application %>
  <%= js :application %>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= gmap_key %>"></script>
  
  <link href='https://fonts.googleapis.com/css?family=Play:400,700' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>
  <body>
    <header>

    <div class="container-fluid">
      <nav class="navbar navbar-default">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">|| sparewall ||</a>
          </div>


          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">


            <li><a href="/about"><i class="fa fa-graduation-cap"></i> about</a></li>
          
              <% if is_logged_in? %>

                <% if is_artist? %>
                  <li><a href="/walls"><i class="fa fa-paint-brush"></i> sparewalls</a></li>
                  <li><a href="/completed_walls"><i class="fa fa-check"></i> completed walls</a></li>
                <% else %>
                  <li><a href="/users"><i class="fa fa-user"></i> artists</a></li>
                  <li><a href="/wallsmap"><i class="fa fa-globe"></i> see map</a></li>
                  <li><a href="/completed_walls"><i class="fa fa-check"></i> completed walls</a></li>
              <% end %>  

    
              <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-home"></i>  <%= current_user.username %> <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a href="/users/<%= current_user.id %>">profile</a></li>
                      <li><a href="/users/<%= current_user.id %>/edit">edit profile</a></li>
                      <li><a href="/logout">logout</a></li>
                    </ul>
                  </li>

              <% else %>

              <li><a href="/completed_walls"><i class="fa fa-check"></i> completed walls</a></li>
              <li><a href="/register"><i class="fa fa-user-plus"></i> register</a></li>
              <li><a href="/login"><i class="fa fa-sign-in"></i> login</a></li>
              <% end %>

            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </header>
    </div>
    <main class="container">

      <%= styled_flash %>
      <%= yield %>
    <main>














  </body>
</html>
