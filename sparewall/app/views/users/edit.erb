<h2>Edit Profile</h2>
<form id="edit" method="post" action="/users/<%= @user.id %>">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
  <div class="form-group">
    <label for="username">Username</label>
    <input name="user[username]" type="text" class="form-control" id="username" placeholder="Username" value="<%= @user.username %>">
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="user[email]" type="email" class="form-control" id="email" placeholder="Email" value="<%= @user.email %>">
  </div>
  <button type="submit" class="btn btn-default">Edit</button>
</form>
