<h2>Index</h2>


<div class="users">
  <div class="row">
    <ul>
      <% @users.each do |user| %>
      <li>
        <a href="/users/<%= user.id %>">
          <%= user.username %> - <%= user.location %>
        </a>
        <p> <%= user.bio %> </p>
      </li>
    
    <img src="<%=user.image%>">


      <li>
        <a href="/users/<%= user.id %>/edit">
          Edit
        </a>
      </li>
      <li>
        <form method="post" action="/users/<%= user.id %>/delete">
          <button>Delete</button>
        </form>
      </li>
      <% end %>
    </ul>
  </div>
</div>